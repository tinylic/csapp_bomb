class implication {

private:
	friend bool operator < (const implication &a, const implication &b) {
			return a.ones < b.ones;
	}

public:
	int bit;
	int xterm;
	int ones;
	string exp;
	bool used;
	bool selected;
	vector<int> ImpContained;


	int CountOne(int x);

	int TotalVariables;

	implication();
	virtual ~implication();

	implication(int mask, int _xterm, int _TotalVariables);

	string show();

};

